{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "root": true,
  "extends": [ "eslint-config-dev" ],
  "ignorePatterns": "dist",
  "parser": "@typescript-eslint/parser",
  "plugins": [ "@typescript-eslint" ],
  "overrides": [
    {
      "files": [ "*.js", "*.ts" ],
      "rules": {
        "no-cond-assign": "off",
        "no-fallthrough": "off",
        "no-undef": "off",
        "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
      }
    }
  ]
}
